<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.nipu.touristguide.activity.HotelDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="5dp"
            android:background="@drawable/rounded_corner"
            android:id="@+id/hotel_des_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/hotel_des_img"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_corner"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/hotel_des_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:typeface="monospace"
            android:text="@string/app_name" />


        <TextView
            android:id="@+id/hotel_des_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:textColor="#000"
            android:textAlignment="center"
            android:typeface="monospace"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/hotel_des_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"
            android:textColor="#000"
            android:textAlignment="center"
            android:typeface="monospace"
            android:text="@string/app_name" />
    </LinearLayout>
</ScrollView>
